### dev/Dockerfile
FROM ubuntu:22.04

# Install dependencies
RUN apt-get update && apt-get install -y \
    git \
    build-essential \
    g++ \
    cmake \
    make \
    gdb \
    libcurl4-openssl-dev \
    libssl-dev \
    libboost-all-dev \
    libwebsocketpp-dev \
    nlohmann-json3-dev \
    vim \
    curl \
    && apt-get clean && rm -rf /var/lib/apt/lists/*
# && divide the apt-get install -y & apt-get clean
# apt-get clean, rm -rf clean up some cache/tag, this method help us reduce the size of image

# Set workdir
WORKDIR /workspace
